<h1>Add a new Logistics Company </h1>

<%= form_with model: @company do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>

  <div>
    <%= f.label :country %>
    <%= f.text_field :country %>
  </div>

  <div>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div>
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>

  <div>
    <%= f.label :max_load %>
    <%= f.number_field :max_load %>
  </div>

  <%= f.hidden_field :user_id, value: current_user.id %>

  <%= f.submit %>
<% end %>