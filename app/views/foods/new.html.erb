<div class="container-md header-space">
  <div class="row">
    <div class="col-md-12">
      <h1>Add a new Food</h1>

      <%= form_with model: [:supplier, @food] do |f| %>
        <div>
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control form-control-lg form-field" %>
        </div>

        <div>
          <div>
            <%= f.label :unit_type, class: "form-label" %>
          </div>
          <div class="radio-button-pad"> 
            <%= f.radio_button :unit_type, "lbs", class: "radio-button" %>
            <%= f.label :lbs, "lbs" %>
          </div>
          <div class="radio-button-pad"> 
            <%= f.radio_button :unit_type, "kg", class: "radio-button" %>
            <%= f.label :kg, "kg" %>
        </div>

        <div>
          <%= f.label :amount, class: "form-label" %>
          <%= f.number_field :amount, class: "form-control form-control-lg form-field", placeholder: "7" %>
        </div>

        <div>
          <%= f.label :expiration, class: "form-label" %>
          <%= f.date_field :expiration, class: "form-control form-control-lg form-field", placeholder: "2020-08-20" %>
        </div>

        <%= f.hidden_field :supplier_id, value: :supplier_id %>

        <%= f.submit "Create Food", class: "btn btn-outline-primary submit-button" %>
      <% end %>
    </div>
  </div>
</div>