<div class="container-md header-space">
  <div class="row">
    <div class="col-md-12">
      <h1>Add a new Distributor</h1>

      <%= form_with model: @distributor do |f| %>
        <div>
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control form-control-lg form-field" %>
        </div>

        <div>
          <%= f.label :state, class: "form-label" %>
          <%= f.text_field :state, class: "form-control form-control-lg form-field", placeholder: "CO" %>
        </div>

        <div>
          <div>
            <%= f.label :country, class: "form-label" %>
          </div>
          <div class="radio-button-pad">
            <%= f.radio_button :country, "United States", class: "radio-button" %>
            <%= f.label :us, "United States" %>
          </div>
          <div class="radio-button-pad">
            <%= f.radio_button :country, "Canada", class: "radio-button" %>
            <%= f.label :canada, "Canada" %>
        </div>

        <div>
          <%= f.label :address, class: "form-label" %>
          <%= f.text_field :address, class: "form-control form-control-lg form-field", placeholder: "123 Veggie St" %>
        </div>

        <div>
          <%= f.label :phone, class: "form-label" %>
          <%= f.telephone_field :phone, class: "form-control form-control-lg form-field", placeholder: "123-456-7890" %>
        </div>

        <div>
          <div>
            <%= f.label :need_level, class: "form-label" %>
          </div>
          <div class="radio-button-pad">
            <%= f.radio_button :need_level, "low", class: "radio-button" %>
            <%= f.label :low, "low" %>
          </div>
          <div class="radio-button-pad">
            <%= f.radio_button :need_level, "medium", class: "radio-button" %>
            <%= f.label :medium, "medium" %>
          </div>
          <div class="radio-button-pad">
            <%= f.radio_button :need_level, "high", class: "radio-button" %>
            <%= f.label :high, "high" %>
          </div>
        </div>

        <div>
          <%= f.label "Capacity | ftÂ²", class: "form-label" %>
          <%= f.text_field :capacity, class: "form-control form-control-lg form-field" %>
        </div>

        <div>
          <%= f.label "What type of food distributor?", class: "form-label" %>
          <%= f.select(:distributor_type, options_for_select([
              ['Food Bank', 'food_bank'],
              ['Community Center', 'community_center'],
              ['School', 'school'],
              ['Food Delivery', 'food_delivery'],
              ['Religious Center', 'religious_center'],
              ['Other', 'other']
            ], 0), {}, { class: 'custom-select custom-select-lg mb-3' }) %>
        </div>

        <%= f.hidden_field :user_id, value: current_user.id %>

        <%= f.submit "Create Distributor", class: "btn btn-outline-primary submit-button" %>
      <% end %>
    </div>
  </div>
</div>
