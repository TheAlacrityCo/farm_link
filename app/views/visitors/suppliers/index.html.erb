<div class="container-md header-space">
  <div class="row">
    <div class="col-md-12">
      <h1>Suppliers</h1>
      <%= link_to 'Add a Supplier', new_supplier_path %>
    </div>
  </div>
  <% @suppliers.each do |supplier| %>
    <div class="row resource-space" id="supplier-id-<%= supplier.id %>">
      <div class="col-md-4">
        <h2><%= link_to supplier.name, supplier_show_path(supplier) %> </h2>
        <ul>
          <li>State :: <%= supplier.state %></li>
          <li>Country :: <%= supplier.country %></li>
          <li>Address :: <%= supplier.address %></li>
          <li>Phone :: <%= supplier.phone %></li>
          <li>Type :: <%= supplier.supplier_type %></li>
        </ul>
      </div>
      <div class="col-md-8">
      </div>
    </div>
  <% end %>
</div>
